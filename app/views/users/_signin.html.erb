
<%= form_for(:session, url: sessions_path) do |t| %>
	<div id="error_explanation">
	 <%= flash[:notice] %>
	</div>
  
  <div class="row">
    <div class="small-6 columns">
      <%= t.label :email %> 
      <%= t.email_field :email %>
    </div>
  </div>

  <div class="row">
    <div class="small-6 columns">
      <%= t.label :enter_password %> 
      <%= t.password_field :password %>
    </div>
  </div>

  <div class="row">
    <div class="small-6 columns">
      <%= t.submit value="Sign in", class: "button radius" %>
    </div>
  </div>
<% end %>

