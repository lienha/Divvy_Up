<% provide(:title, 'Sign up') %>

<div class="row">
    <%= form_for(@user) do |f| %>
      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :username %>
      <%= f.text_field :username %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit %>
    <% end %>
</div>