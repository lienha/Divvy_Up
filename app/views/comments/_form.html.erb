<% if current_user %>
<%= form_for :comment, url: poi_comments_path(poi.id), id: "com_form#{poi.id}" , remote: true do |f| %>
  <p>
    <%= f.hidden_field :poi_id, {value: poi.id} %>
    <%= f.label :text, "Tell Us What You Think:" %>
    <br>
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.submit "Comment"%>
  </p>
<% end %>
<% else %>
	<p>Please <%=link_to "Sign In", signin_path %> or <%=link_to "Sign Up", signup_path %> to Comment</p>
<% end %>