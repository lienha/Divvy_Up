    <%= javascript_include_tag 'gmaps' %>
    <script type="text/javascript">
      $(document).ready(function(){
        var poi_data = []
        var map = new GMaps({
          el:'#map-canvas',
          lat: <%= @tour_center[:lat] %>,
          lng: <%= @tour_center[:lng] %>,
          zoom: <%= @tour.zoom %>,
          zoomControl: true,
          zoomControlOpt:{
            style: 'SMALL',
            position: 'TOP_LEFT'
          },
          panControl: false
        });
        <% @location.each do |l| %>
          map.addMarker({
            lat: <%= l[:lat] %>,
            lng: <%= l[:lng] %>,
            title: 'test',
            click: function(e){
              window.alert(e);
            }
          })
        <% end %>
      })
    </script>

    <div id="map-canvas"/>
    <% @location.each do |l| %>
    <p><%= l %> </p>
    <% end %>
